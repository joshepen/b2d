{
	"name": "Bookmark to .desktop",
	"description": "Convert bookmarks to .desktop files",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "popup.html",
		"default_icon": "img/folder.png"
	},
	"permissions": ["bookmarks", "downloads"],
	"background": {
		"service_worker": "src/download.js",
		"type": "module"
	}
}
